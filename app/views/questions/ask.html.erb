

<!-- the method attribute holds the HTTP verb (GET by default) -->
<!-- the action attribute holds the url of the request it triggers on submit -->
<form action="answer">

  <label for="question"><p>Ask your coach anything</p> </label>
  <p class="">
    <input type="text" name="question" class="input">
    <input type="submit" value="Ask!" class="btn">
  </p><!-- In the <input>, the name attribute enables you to set the key of the corresponding parameter -->
</form>
